packages:             ./*.cabal
-- flags:       set whatever you need here
optimization:         2
-- smaller binaries, but builds slower
split-sections:       True

package finitary-derive
  -- So haddock doesn't complain about plugins
  haddock-options:    --optghc=-fdefer-type-errors

package finitary
  haddock-options:    --optghc=-fdefer-type-errors
  documentation: True

package *
  documentation: True
